# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK Configuration
# Download your service account key from Firebase Console > Project Settings > Service Accounts
# Keep these PRIVATE and never commit to version control!
FIREBASE_CLIENT_EMAIL=your_service_account_email@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Admin Configuration
# Comma-separated list of email addresses that have admin access
# Example: admin@ctf.local,admin2@example.com,admin3@example.com
NEXT_PUBLIC_ADMIN_EMAILS=your_admin_email@example.com

# Email Configuration
EMAIL_APP_PASSWORD=your_gmail_app_password

# Migration Configuration
MIGRATION_SECRET=your_secret_token_for_migration

